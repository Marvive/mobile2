<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mmarvive.wgumobileproject">

    <uses-permission android:name="com.android.alarm.permission.SET_ALARM" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/calendar_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- Database Provider -->
        <provider
            android:name=".DataProvider"
            android:authorities="com.mmarvive.wgumobileproject.dataprovider"
            android:exported="false" />
        <!-- Image File Provider -->
        <provider
            android:name=".ImagePackage.ImageFileProvider"
            android:authorities="${applicationId}.com.mmarvive.wgumobileproject.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_paths" />
        </provider>

        <!-- Alarm Provider -->
        <receiver android:name=".Alarm" />

        <!-- Activities -->
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TermPackage.TermListActivity"
            android:label="@string/term_list"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.mmarvive.wgumobileproject.MainActivity" />
        </activity>
        <activity
            android:name=".TermPackage.TermViewerActivity"
            android:label="@string/term_viewer"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.mmarvive.wgumobileproject.TermPackage.TermListActivity" />
        </activity>
        <activity
            android:name=".TermPackage.TermEditorActivity"
            android:label="@string/term_editor"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.mmarvive.wgumobileproject.TermPackage.TermViewerActivity" />
        </activity>
        <activity
            android:name=".CoursePackage.CourseListActivity"
            android:label="@string/course_list"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.mmarvive.wgumobileproject.TermPackage.TermViewerActivity" />
        </activity>
        <activity
            android:name=".CoursePackage.CourseViewerActivity"
            android:label="@string/course_viewer"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.mmarvive.wgumobileproject.CoursePackage.CourseListActivity" />
        </activity>
        <activity
            android:name=".CoursePackage.CourseEditorActivity"
            android:label="@string/course_editor"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.mmarvive.wgumobileproject.CoursePackage.CourseViewerActivity" />
        </activity>
        <activity
            android:name=".CoursePackage.CourseNoteListActivity"
            android:label="@string/course_note_list"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.mmarvive.wgumobileproject.CoursePackage.CourseViewerActivity" />
        </activity>
        <activity
            android:name=".AssessmentPackage.AssessmentListActivity"
            android:label="@string/assessment_list"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.mmarvive.wgumobileproject.CoursePackage.CourseViewerActivity" />
        </activity>
        <activity
            android:name=".AssessmentPackage.AssessmentViewerActivity"
            android:label="@string/assessment_viewer"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.mmarvive.wgumobileproject.AssessmentPackage.AssessmentListActivity" />
        </activity>
        <activity
            android:name=".CoursePackage.CourseNoteViewerActivity"
            android:label="@string/course_note_viewer"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.mmarvive.wgumobileproject.CoursePackage.CourseNoteListActivity" />
        </activity>
        <activity
            android:name=".AssessmentPackage.AssessmentNoteListActivity"
            android:label="@string/assessment_note_list"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.mmarvive.wgumobileproject.AssessmentPackage.AssessmentViewerActivity" />
        </activity>
        <activity
            android:name=".AssessmentPackage.AssessmentNoteViewerActivity"
            android:label="@string/assessment_note_viewer"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.mmarvive.wgumobileproject.AssessmentPackage.AssessmentNoteListActivity" />
        </activity>
        <activity
            android:name=".AssessmentPackage.AssessmentEditorActivity"
            android:label="@string/assessment_editor"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.mmarvive.wgumobileproject.AssessmentPackage.AssessmentViewerActivity" />
        </activity>
        <activity
            android:name=".CoursePackage.CourseNoteEditorActivity"
            android:label="@string/course_note_editor"
            android:parentActivityName=".CoursePackage.CourseNoteListActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.mmarvive.wgumobileproject.CoursePackage.CourseNoteListActivity" />
        </activity>
        <activity
            android:name=".AssessmentPackage.AssessmentNoteEditorActivity"
            android:label="@string/assessment_note_editor"
            android:parentActivityName=".AssessmentPackage.AssessmentNoteListActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.mmarvive.wgumobileproject.AssessmentPackage.AssessmentNoteListActivity" />
        </activity>
        <activity
            android:name=".CameraActivity"
            android:label="@string/camera_activity"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ImagePackage.ImageListActivity"
            android:label="@string/image_list"
            android:parentActivityName=".CoursePackage.CourseNoteViewerActivity"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>