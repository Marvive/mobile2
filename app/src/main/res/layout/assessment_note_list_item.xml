<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ImageView
            android:id="@+id/imageDocIcon"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:src="@drawable/comment_text_outline"
            android:contentDescription="@string/note_image" />


    <TextView
            android:id="@+id/textViewAssessmentNoteText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="4dp"
            android:layout_toEndOf="@+id/imageDocIcon"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/test_term_name"
            android:textColor="@color/list_item_text"
            android:textSize="@dimen/standard_text" />

</RelativeLayout>